<launch>
	<!-- 是否开启rviz显示 -->
	<arg name="enable_rviz" default="true"/>

  <node name="lx_camera_node" pkg="lx_camera_ros" type="lx_camera_node" output="screen">
		<!-- ip、日志路径、流配置、算法、工作模式配置、点云单位 -->
	<param name="enable_gpu" 							value="1"/>
	<param name="ip" 									value="0"/>
	<param name="log_level"								value="1" />
	<param name="log_path" 								value="./log/"/>
	<param name="is_depth" 								value="1" />
	<param name="is_xyz" 								value="0" />
	<param name="is_xyzit" 								value="1" />
	<param name="LX_BOOL_ENABLE_3D_AMP_STREAM"			value="0" />
	<param name="LX_BOOL_ENABLE_2D_STREAM"				value="1" />
	<param name="LX_BOOL_ENABLE_IMU"					value="1" />    
		<!--0:mm; 1:m-->
	<param name="LX_INT_XYZ_UNIT"						value="1" />
		<!--0:camera; 1:robot-->
	<param name="LX_INT_XYZ_COORDINATE"					value="1" />

		<!-- 相机配置，将需要生效的内容移除注释区
	<param name="LX_INT_RGBD_ALIGN_MODE"				value="1" />
	<param name="LX_INT_ALGORITHM_MODE"					value="0" />
	<param name="LX_INT_WORK_MODE" 						value="0" />
	<param name="LX_BOOL_ENABLE_MULTI_MACHINE"			value="1" />
	<param name="LX_BOOL_ENABLE_2D_UNDISTORT"			value="0" />
	<param name="LX_INT_2D_UNDISTORT_SCALE"				value="1" />
	<param name="LX_INT_2D_BINNING_MODE" 				value="1" />
	<param name="LX_BOOL_ENABLE_3D_UNDISTORT"			value="0" />
	<param name="LX_INT_3D_UNDISTORT_SCALE"				value="1"/>
	<param name="LX_INT_3D_BINNING_MODE"				value="0" />
	<param name="LX_BOOL_ENABLE_MULTI_EXPOSURE_HDR"		value="1" />
	<param name="LX_INT_FIRST_EXPOSURE"					value="1100" />
	<param name="LX_INT_SECOND_EXPOSURE"				value="200" />
	<param name="LX_INT_MIN_DEPTH" 						value="0" />
	<param name="LX_INT_MAX_DEPTH" 						value="8000" />
		-->

		<!-- 相机位姿配置: 单位：米，度数
	<param name="x" 									value="0.0" />
	<param name="y" 									value="0.0" />
	<param name="z" 									value="0.0" />
	<param name="yaw" 									value="0.0" />
	<param name="roll" 									value="0.0" />
	<param name="pitch" 								value="0.0" />
		-->

  </node>

	<!-- rviz -->
	<group if="$(arg enable_rviz)">
		<node name="lx_camera" pkg="rviz" type="rviz" args="-d $(find lx_camera_ros)/rviz/lx_camera.rviz" required="false" />
	</group>

</launch>
